---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"guides"> | CollectionEntry<"articles">;
}

const { entry } = Astro.props;
if (!entry) {
  throw new Error("Entry is null or undefined");
}
---

<a href={`/${entry.collection}/${entry.slug}`} class="relative group flex flex-nowrap py-6 px-6 pr-12 rounded-xl card-modern hover:scale-[1.02] transform transition-all duration-300 ease-in-out">
  <div class="flex flex-col flex-1 truncate">
    <div class="font-bold text-lg text-slate-900 dark:text-slate-100 mb-2">
      {entry.data.title}
    </div>
    <div class="text-slate-600 dark:text-slate-400 leading-relaxed line-clamp-2 overflow-hidden">
      {entry.data.description}
    </div>
  </div>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 24 24"
    class="absolute top-1/2 right-4 -translate-y-1/2 size-6 stroke-2 fill-none stroke-blue-600 dark:stroke-blue-400 group-hover:stroke-indigo-600 dark:group-hover:stroke-indigo-400 transition-colors duration-300">
    <line x1="5" y1="12" x2="19" y2="12" class="translate-x-3 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out" />
    <polyline points="12 5 19 12 12 19" class="-translate-x-1 group-hover:translate-x-0 transition-transform duration-300 ease-in-out" />
  </svg>
</a>
