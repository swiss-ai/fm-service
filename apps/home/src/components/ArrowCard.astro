---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"guides"> | CollectionEntry<"articles">;
}

const { entry } = Astro.props;
if (!entry) {
  throw new Error("Entry is null or undefined");
}
---

<a href={`/${entry.collection}/${entry.slug}`} class="group relative flex flex-nowrap py-6 px-6 pr-12 rounded-xl bg-white dark:bg-gray-800 border border-gray-200/50 dark:border-gray-700/50 hover:border-gray-300 dark:hover:border-gray-600 hover:shadow-lg dark:hover:shadow-gray-900/25 transition-all duration-300 ease-in-out transform hover:scale-[1.02]">
  <div class="flex flex-col flex-1 truncate">
    <div class="font-semibold text-lg text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
      {entry.data.title}
    </div>
    <div class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
      {entry.data.description}
    </div>
  </div>
  <div class="absolute top-1/2 right-4 -translate-y-1/2 w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-2 group-hover:translate-x-0">
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      viewBox="0 0 24 24"
      class="size-4 stroke-2 fill-none stroke-white">
      <line x1="5" y1="12" x2="19" y2="12" />
      <polyline points="12 5 19 12 12 19" />
    </svg>
  </div>
</a>
