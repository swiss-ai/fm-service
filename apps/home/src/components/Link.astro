---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("inline-block decoration-blue-600/30 dark:decoration-blue-400/30 hover:decoration-blue-700/50 hover:dark:decoration-blue-300/50 text-blue-600 dark:text-blue-400 hover:text-blue-700 hover:dark:text-blue-300 transition-all duration-300 ease-in-out font-medium", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
