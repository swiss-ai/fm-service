---
interface Props {
  name: string;
  role: string;
  avatar: string;
  url?: string;
}

const { name, role, avatar, url } = Astro.props;
---

<div class="flex flex-col items-center gap-4 p-6 rounded-xl card-modern hover:scale-[1.02] transform transition-all duration-300 ease-in-out">
  <div class="relative">
    <img 
      src={avatar} 
      alt={`${name}'s avatar`} 
      class="w-20 h-20 rounded-full object-cover border-4 border-white dark:border-slate-700 shadow-lg"
    />
    <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-blue-500/20 to-purple-500/20"></div>
  </div>
  <div class="flex flex-col items-center text-center space-y-1">
    {url ? (
      <a 
        href={url} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="font-bold text-lg text-slate-900 dark:text-slate-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
      >
        {name}
      </a>
    ) : (
      <span class="font-bold text-lg text-slate-900 dark:text-slate-100">{name}</span>
    )}
    <span class="text-sm font-medium text-slate-600 dark:text-slate-400 bg-slate-100 dark:bg-slate-700 px-3 py-1 rounded-full">{role}</span>
  </div>
</div> 