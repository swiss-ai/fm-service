---
interface Props {
  name: string;
  logo: string;
  url?: string;
  width?: number;
  height?: number;
}

const { name, logo, url, width = 158, height = 64 } = Astro.props;
---

<div class="flex items-center justify-center">
  {url ? (
    <a href={url} target="_blank" rel="noopener noreferrer" class="block hover:scale-110 transition-transform duration-300">
      <img src={logo} alt={name} width={width} height={height} class="max-h-16 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-300" />
    </a>
  ) : (
    <img src={logo} alt={name} width={width} height={height} class="max-h-16 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-300" />
  )}
</div> 