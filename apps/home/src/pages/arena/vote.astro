---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArenaNav from "@components/ArenaNav.astro";
import ArenaHeader from "@components/ArenaHeader.astro";
import { SITE } from "@consts";

export const prerender = false;
---

<PageLayout title="LLM Arena Vote" description="Vote on model comparisons in the LLM Arena">
  <Container>
    <div class="space-y-12">
      <ArenaHeader />

      <ArenaNav currentPage="vote" />

      <!-- Vote Section Header -->
      <div class="animate text-center">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">
          Vote & Evaluate
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          Help improve model rankings by evaluating and voting on AI responses
        </p>
      </div>

      <!-- Coming Soon Section -->
      <section class="animate">
        <div class="card p-12 text-center bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 border-indigo-200 dark:border-indigo-800">
          <!-- Icon -->
          <div class="mb-8">
            <div class="w-24 h-24 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-full flex items-center justify-center mx-auto shadow-lg">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          
          <h3 class="text-3xl font-bold text-slate-900 dark:text-white mb-6">
            Voting Interface Coming Soon
          </h3>
          
          <p class="text-xl text-slate-600 dark:text-slate-300 mb-12 max-w-2xl mx-auto leading-relaxed">
            We're building an advanced voting system that will allow you to evaluate model responses 
            and contribute to the arena rankings through blind comparisons.
          </p>
          
          <!-- Features Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto mb-12">
            <div class="card p-6 bg-white/50 dark:bg-slate-800/50">
              <div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">Side-by-Side Comparisons</h4>
              <p class="text-slate-600 dark:text-slate-400 text-sm">
                Compare model responses side-by-side with identical prompts for fair evaluation
              </p>
            </div>

            <div class="card p-6 bg-white/50 dark:bg-slate-800/50">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-purple-700 rounded-xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd"/>
                  <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">Blind Evaluation</h4>
              <p class="text-slate-600 dark:text-slate-400 text-sm">
                Model identities hidden during evaluation to reduce bias and ensure fair rankings
              </p>
            </div>
          </div>

          <!-- Call to Action -->
          <div class="space-y-6">
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/arena/leaderboard" class="btn-primary">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                View Current Rankings
              </a>
              <a href="/arena/details" class="btn-secondary">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                </svg>
                Explore Details
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </Container>
</PageLayout> 