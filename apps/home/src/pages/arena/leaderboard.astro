---
import WideContainer from "@components/WideContainer.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArenaMatrix from "@components/ArenaMatrix.svelte";
import ArenaRankings from "@components/ArenaRankings.svelte";
import ArenaNav from "@components/ArenaNav.astro";
import { SITE } from "@consts";
import fs from 'fs';
import path from 'path';

// Load data from public directory
let matrixData = {};
let elosData = {};

try {
  const publicDir = path.join(process.cwd(), 'public');
  const matrixPath = path.join(publicDir, 'data', 'arena', 'matrix.json');
  const elosPath = path.join(publicDir, 'data', 'arena', 'elos.json');
  
  matrixData = JSON.parse(fs.readFileSync(matrixPath, 'utf-8'));
  elosData = JSON.parse(fs.readFileSync(elosPath, 'utf-8'));
} catch (error) {
  console.error('Error loading arena data:', error);
}

export const prerender = false;
---

<PageLayout title="LLM Arena Leaderboard" description="Language Model Performance Rankings and Head-to-Head Comparisons">
  <WideContainer>
    <div class="space-y-12">
      <!-- Hero Section -->
      <header class="animate text-center py-8">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-bold gradient-text mb-6 leading-tight">
            LLM Arena <span class="text-4xl md:text-5xl">üèÜ</span>
          </h1>
          <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-300 mb-8 leading-relaxed">
            Explore rankings and head-to-head performance comparisons of large language models based on human evaluations
          </p>
          
          <!-- Status Card -->
          <div class="animate-delay-1 inline-flex items-center gap-4 card px-8 py-4">
            <div class="w-3 h-3 status-online rounded-full"></div>
            <span class="font-medium text-slate-700 dark:text-slate-300">
              Live Rankings ‚Ä¢ Updated Daily ‚Ä¢ Community Driven
            </span>
          </div>
        </div>
      </header>

      <ArenaNav currentPage="leaderboard" />

      <!-- ELO Rankings Section -->
      <section class="animate space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">
            ELO Rankings
          </h2>
          <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
            Model performance rankings based on head-to-head comparisons and community evaluations
          </p>
        </div>
        <div class="card p-8">
          <ArenaRankings elosData={elosData} client:load />
        </div>
      </section>

      <!-- Head-to-Head Matrix Section -->
      <section class="animate space-y-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">
            Head-to-Head Matrix
          </h2>
          <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto mb-6">
            Interactive matrix showing win rates between models. Each cell shows how often the row model beats the column model.
          </p>
        </div>
        <div class="card p-8">
          <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl p-6 mb-8 border border-indigo-200 dark:border-indigo-800">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-indigo-900 dark:text-indigo-100 mb-2">How to read the matrix</h3>
                <p class="text-indigo-800 dark:text-indigo-200 text-sm">
                  Green cells indicate higher win rates, blue cells indicate lower win rates. 
                  Hover over cells to see detailed statistics and confidence intervals.
                </p>
              </div>
            </div>
          </div>
          <ArenaMatrix matrixData={matrixData} client:load />
        </div>
      </section>
    </div>
  </WideContainer>
</PageLayout> 