---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArenaMatrix from "@components/ArenaMatrix.svelte";
import ArenaRankings from "@components/ArenaRankings.svelte";
import ArenaNav from "@components/ArenaNav.astro";
import { SITE } from "@consts";

// Import the original data (not the _upd versions)
import matrixData from "../../data/arena/matrix.json";
import elosData from "../../data/arena/elos.json";

export const prerender = false;
---

<PageLayout title="LLM Arena Leaderboard" description="Language Model Performance Rankings and Head-to-Head Comparisons">
  <Container>
    <div class="space-y-8">
      <header class="animate text-center">
        <h1 class="text-4xl font-bold text-black dark:text-white mb-2">
          LLM Arena <span class="text-3xl">üèÜ</span>
        </h1>
        <p class="text-gray-700 dark:text-gray-300 text-lg">
          Explore rankings and head-to-head performance comparisons of large language models based on human evaluations.
        </p>
      </header>

      <div class="animate text-center">
        <h2 class="text-2xl font-semibold text-black dark:text-white mb-4">
          Leaderboard
        </h2>
      </div>

      <ArenaNav currentPage="leaderboard" />

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h3 class="text-xl font-semibold text-black dark:text-white">
            ELO Rankings
          </h3>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <ArenaRankings elosData={elosData} client:load />
        </div>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h3 class="text-xl font-semibold text-black dark:text-white">
            Head-to-Head Matrix
          </h3>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <p class="text-gray-600 dark:text-gray-400 mb-6 text-sm">
            Interactive matrix showing win rates between models. Each cell shows how often the row model beats the column model. 
            Green indicates higher win rates, blue indicates lower win rates.
          </p>
          <ArenaMatrix matrixData={matrixData} client:load />
        </div>
      </section>
    </div>
  </Container>
</PageLayout> 